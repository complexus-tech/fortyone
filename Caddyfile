# Main landing app (fortyone.lc)
fortyone.lc {
	tls internal
	reverse_proxy localhost:3000
}

# Docs app (docs.fortyone.lc)
docs.fortyone.lc {
	tls internal
	reverse_proxy localhost:3002
}

# Projects app - handles specific workspace subdomains
qa.fortyone.lc {
	tls internal
	reverse_proxy localhost:3001
}

payments.fortyone.lc {
	tls internal
	reverse_proxy localhost:3001
}

growth.fortyone.lc {
	tls internal
	reverse_proxy localhost:3001
}

# Optional: redirect www to main domain
www.fortyone.lc {
	tls internal
	redir https://fortyone.lc{uri}
}


