# Main landing app (complexus.lc)
complexus.lc {
	tls internal
	reverse_proxy localhost:3001
}

# Docs app (docs.complexus.lc)
docs.complexus.lc {
	tls internal
	reverse_proxy localhost:3002
}

# Projects app - handles specific workspace subdomains
qa.complexus.lc {
	tls internal
	reverse_proxy localhost:3000
}

payments.complexus.lc {
	tls internal
	reverse_proxy localhost:3000
}

growth.complexus.lc {
	tls internal
	reverse_proxy localhost:3000
}

# Optional: redirect www to main domain
www.complexus.lc {
	tls internal
	redir https://complexus.lc{uri}
}


