# Main landing app (complexus.localhost)
complexus.localhost {
	reverse_proxy localhost:3000
}

# Docs app (docs.complexus.localhost)
docs.complexus.localhost {
	reverse_proxy localhost:3002
}

# Optional: redirect www to main domain
www.complexus.localhost {
	redir https://complexus.localhost{uri}
}

# Projects app - handles all workspace subdomains
*.complexus.localhost {
	reverse_proxy localhost:3001
}
